{
    "manifest_version": 2,
    "name": "Narou2Kakuyomu",
    "version": "0.1a",
    "description": "小説家になろう上でカクヨムのデザインを再現する拡張機能",
    "icons": {
        "48": "icons/48.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://ncode.syosetu.com/*"
            ],
            "js": [
                "jquery-3.5.1.min.js",
                "apply_style.js"
            ],
            "css": [
                "./css/general.css"
            ]
        }
    ],
    "browser_action":{
        "default_icon": {
            "48" : "icons/48.png"
        },
        "default_popup": "setting.html"
    },
    "permissions": [
        "storage"
    ]
}
