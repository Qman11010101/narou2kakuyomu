{
    "manifest_version": 3,
    "name": "__MSG_extensionName__",
    "version": "1.0.0",
    "description": "__MSG_extensionDescription__",
    "default_locale": "ja",
    "icons": {
        "48": "icons/48.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://ncode.syosetu.com/*",
                "*://novel18.syosetu.com/*"
            ],
            "js": [
                "apply_style.js"
            ],
            "css": [
                "css/general.css"
            ],
            "run_at": "document_end"
        }
    ],
    "action": {
        "default_icon": {
            "48": "icons/48.png"
        },
        "default_popup": "popup.html"
    },
    "permissions": [
        "storage"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "css/color/black.css",
                "css/color/blue.css",
                "css/color/kinari.css",
                "css/color/white.css",
                "css/color/apply_color.css",
                "css/disp_script/display.css",
                "css/disp_script/hide.css",
                "css/size/small.css",
                "css/size/medium.css",
                "css/size/large.css",
                "css/size/huge.css",
                "css/size/apply_size.css",
                "css/font/mincho.css",
                "css/font/gothic.css",
                "css/font/apply_font.css"
            ],
            "matches": [
                "*://ncode.syosetu.com/*",
                "*://novel18.syosetu.com/*"
            ]
        }
    ]
}